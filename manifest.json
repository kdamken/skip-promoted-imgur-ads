{
	"manifest_version": 2,
	"name": "Skip Promoted Imgur Posts",
	"description": "Automatically skips Imgur pages that have promoted posts so you don't have to see ads.",
	"version": "1.0",
	"author": "Kyle Damken",
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://imgur.com/*"
			],
			"js": [
				"js/content.js"
			]
		}
	],
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_icon": "img/spip-off.png",
		"default_title": "Skip Promoted Imgur Posts",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"tabs"
	]
}